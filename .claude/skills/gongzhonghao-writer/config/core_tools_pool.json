      "recent": {
        "keywords": ["最新", "更新", "新版", "升级"],
        "window_hours": 72,
        "priority_boost": 1.5
      },
      "version": {
        "pattern": "[vV]?\\d+\\.\\d+(\\.\\d+)?",
