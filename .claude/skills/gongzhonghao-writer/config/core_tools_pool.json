  "timeliness_rules": {
    "_description": "时效性判断规则",
    "hot_signals": {
      "immediate": {
        "keywords": ["刚刚", "今天", "发布", "上线", "官宣", "breaking"],
        "window_hours": 24,
        "priority_boost": 2.0
